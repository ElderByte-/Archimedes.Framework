<Window x:Class="Archimedes.Framework.SampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ext="clr-namespace:Archimedes.Framework.Localisation.WPF;assembly=Archimedes.Framework"
        Title="{Binding Title}" Height="350" Width="525">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{ext:Localisation Id=customers.title}" FontSize="30" FontFamily="Open Sans Light"/>

        <ListBox ItemsSource="{Binding Path=CustomersVm.AllCustomers}" Grid.Row="1" SelectedItem="{Binding Path=CustomersVm.CurrentCustomer}"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal">

            <Button x:Name="button" Content="{ext:Localisation Id=customers.button.detail}" Command="{Binding Path=CustomersVm.ShowDetailCommand}" 
                HorizontalAlignment="Left" Height="25" Margin="10,5,0,0"  VerticalAlignment="Top" MinWidth="80"/>
            
            <TextBlock Text="{ext:Localisation Id=additional.message}" Margin="5" VerticalAlignment="Center"/>
        </StackPanel>
        

    </Grid>
</Window>
